<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/transparent1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/alertbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/nunito_variable"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/nunito_variable"
            android:gravity="center"
            android:tag="100"
            android:textColor="@color/green_color"
            android:textSize="@dimen/small_text"
            android:textStyle="bold" />

        <View
            android:id="@+id/separatorView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/viewpoint1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCancel"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_variable"
                android:tag="101"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/extra_small_text" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@color/viewpoint1" />

            <Button
                android:id="@+id/btn_alert"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_variable"
                android:tag="101"
                android:text="View Order"
                android:textColor="@color/black"
                android:textSize="@dimen/extra_small_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>